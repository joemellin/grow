.row
	.col-md-4.col-md-offset-4.col-xs-10.col-xs-offset-1.box
		.profile_header.center{:style => "padding-top:40px;"} 
			= form_for @user, html: { multipart: true } do |f|
				- if @user.errors.any?
					#error_explanation
						%h2
							= pluralize(@user.errors.count, "error")
							prohibited this pin from being saved:
						%ul
							- @user.errors.full_messages.each do |msg|
								%li= msg
				.form-group.center{:style => "color:#fff;margin-bottom:30px;"} 
					= f.label "Create a nick Name", :style => "font-size:1.3em;"
					= f.text_field :nick, class: "form-control"
					%p.help-block{:style => "color:#fff;font-size:.9em;"} 
						SHARED
				.form-group.center{:style => "color:#fff;margin-bottom:30px; "} 
					= f.label "Cell Phone Number", :style => "font-size:1.3em;"
					= f.text_field :phone, class: "form-control"
					%p.help-block{:style => "color:#fff;font-size:.9em;"} 
						PRIVATE
				.form-group
					= f.submit "Save Profile", class: "btn btn-default", :style => "color:#fff;background-color:#59FF85; border-color:#fff;border-width: 2px; font-size:1.7em; margin-top:10px; "
