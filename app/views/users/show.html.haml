.row	
	.col-sm-4.col-sm-offset-4.right{:style => "padding: 10px 5px 20px;"}

		.dropdown
			%button#dropdownMenu1.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button",:class => "btn btn-default", :style => "color:#fff;background-color:#59FF85; border-color:#fff;border-width: 0px; font-size:1.7em; ",}
				%span.glyphicon.glyphicon-cog
			%ul.dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
				%li{:role => "presentation"}
					%a{:href => edit_user_path(@user), :role => "menuitem", :tabindex => "-1"} Edit Profile
				%li.divider{:role => "presentation"}
				%li{:role => "presentation"}
					%a{:href => signout_path, :role => "menuitem", :tabindex => "-1"} Sign Out
			



.row
	.col-md-6.col-md-offset-3.center
		

		- if @user.phone && @user.nick
			%h3{:style => "color: #fff; padding-bottom:50px;font-size:2em;"} Hello #{@user.nick}
			%p
				= link_to "Connect" , twilio_call_path , :class => "btn btn-default", :style => "color:#fff;background-color:#59FF85; border-color:#fff;border-width: 2px; font-size:1.7em; "

		- else
			%h3{:style => "color: #fff;font-size:2em;"}Welcome to Circle. 
			%h3{:style => "color: #fff; padding-bottom:40px;font-size:2em;"} To begin, create your profile.
			%p
				= link_to "Create Profile", edit_user_path(@user), :class => "btn btn-default", :style => "color:#fff;background-color:#59FF85; border-color:#fff;border-width: 2px; font-size:1.7em; "