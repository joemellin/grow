.row	
	.col-sm-4.col-sm-offset-4.right{:style => "padding: 10px 5px 20px;"}

		.dropdown
			%button#dropdownMenu1.btn.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :type => "button",:class => "btn btn-default", :style => "color:#fff;background-color:#58CEEE; border-color:#fff;border-width: 0px; font-size:1.7em; ",}
				%span.glyphicon.glyphicon-cog
			%ul.dropdown-menu.dropdown-menu-right{"aria-labelledby" => "dropdownMenu1", :role => "menu"}
				%li{:role => "presentation"}
					%a{:href => edit_user_path(@user), :role => "menuitem", :tabindex => "-1"} Edit Profile
				%li{:role => "presentation"}
					%a{:href => first_path, :role => "menuitem", :tabindex => "-1"} Add Contact
					
				%li.divider{:role => "presentation"}
				%li{:role => "presentation"}
					%a{:href => signout_path, :role => "menuitem", :tabindex => "-1"} Sign Out
			



.row
	.col-md-6.col-md-offset-3.center
		

		- unless @user.phone && @user.nick
			%h3{:style => "color: #fff; padding-bottom:50px;font-size:2.5em;"} Hello #{@user.nick}
			%p{:style => "color: #fff; padding:0 30px 40px 30px; text-align:left;"} 
				%b To Connect: 
				Click the below button and your phone will ring. Then you will be connected to another member.  If you they do not pickup just try again.
			%p
				= link_to "Connect" , twilio_call_path , :class => "btn btn-default", :style => "color:#fff;background-color:#59FF85; border-color:#fff;border-width: 2px; font-size:1.7em; width:180px;"


		- else
			%h3{:style => "color: #fff;font-size:2.5em;"}Welcome! 
			%h3{:style => "color: #fff; padding:18px 0 20px;font-size:1.5em;"} To begin:
			%p
				= link_to "Add Contact", first_path, :class => "btn btn-default", :style => "color:#fff;background-color:#59FF85; border-color:#fff;border-width: 2px; font-size:1.7em;  margin-bottom:0px;width:180px; "
			%p.center{:style =>"color:#fff;margin-bottom:10px;font-size:1.5em;"} &
			%p
				= link_to "Create Profile", edit_user_path(@user), :class => "btn btn-default", :style => "color:#fff;background-color:#59FF85; border-color:#fff;border-width: 2px; font-size:1.7em; width:180px; "